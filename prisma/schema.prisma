generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // App specific fields
  role          Role      @default(USER) // System-level role
  points        Int       @default(1000) // DEPRECATED: Migrating to ArenaMembership.points
  
  memberships   ArenaMembership[]
  
  createdMarkets Market[]  @relation("CreatedMarkets")
  bets           Bet[]
  sentTransfers  Transaction[] @relation("Sender")
  receivedTransfers Transaction[] @relation("Receiver")
  notifications  Notification[]
  notificationSettings NotificationSettings?
  comments       Comment[]
  disputes       Dispute[]
  llmUsage       LLMUsage[]
  
  // Visibility Relations
  hiddenFromMarkets Market[] @relation("HiddenMarketUsers")
  hiddenBetsFromMarkets Market[] @relation("HiddenBetsUsers")

  sentInvitations Invitation[] @relation("SentInvitations")
  acceptedInvitations InvitationUsage[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

// App Specific Models

model Arena {
  id          String   @id @default(cuid())
  name        String
  description String?
  about       String? // Rich text / Markdown content
  coverImage  String?
  slug        String   @unique // For friendly URLs if needed, or just use ID
  
  members     ArenaMembership[]
  markets     Market[]
  transactions Transaction[]
  invitations Invitation[]
  settings    ArenaSettings?
  notifications Notification[]
  news          ArenaNews[]
  llmUsage      LLMUsage[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  archivedAt  DateTime?
}

model ArenaNews {
  id        String   @id @default(cuid())
  arenaId   String
  arena     Arena    @relation(fields: [arenaId], references: [id], onDelete: Cascade)
  
  headlines String[]
  
  createdAt DateTime @default(now())

  @@index([arenaId])
}

model ArenaSettings {
  id        String   @id @default(cuid())
  arenaId   String   @unique
  arena     Arena    @relation(fields: [arenaId], references: [id], onDelete: Cascade)

  // Cycle
  resetFrequency ResetFrequency @default(MONTHLY)
  nextResetDate  DateTime?
  winnerRule     WinnerRule     @default(HIGHEST_BALANCE)

  // Points
  monthlyAllocation Int     @default(1000)
  allowCarryover    Boolean @default(false)
  allowTransfers    Boolean @default(true)
  transferLimit     Int?    // Max points per transfer (null = unlimited)

  // Markets
  creationPolicy         MarketCreationPolicy @default(EVERYONE)
  allowedTypes           MarketType[]         @default([BINARY, MULTIPLE_CHOICE])
  defaultExpirationHours Int                  @default(72)
  requireApproval        Boolean              @default(false)
  defaultLanguage        String               @default("en")

  // AMM
  ammType           AMMType @default(FPMM)
  tradingFeePercent Float   @default(0)
  seedLiquidity     Int     @default(50)

  // Bet Restrictions
  limitMultipleBets Boolean @default(true)
  multiBetThreshold Int     @default(3)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ResetFrequency {
  WEEKLY
  MONTHLY
  CUSTOM
  MANUAL
}

enum WinnerRule {
  HIGHEST_BALANCE
  MOST_BETS_WON
  HIGHEST_ROI
}

enum MarketCreationPolicy {
  EVERYONE
  ADMIN
  APPROVED_CREATORS
}

enum AMMType {
  FPMM
  LMSR
  FIXED_ODDS
}

model ArenaMembership {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  arenaId   String
  arena     Arena     @relation(fields: [arenaId], references: [id], onDelete: Cascade)
  
  role      ArenaRole @default(MEMBER)
  points    Int       @default(1000)

  notificationSettings ArenaNotificationSettings?
  
  joinedAt  DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, arenaId])
}

model ArenaNotificationSettings {
  id        String   @id @default(cuid())
  
  membershipId String @unique
  membership   ArenaMembership @relation(fields: [membershipId], references: [id], onDelete: Cascade)

  // Mute this arena completely
  muted Boolean @default(false)

  // Settings (Email, Web) - Null means inherit from global
  email_BET_RESOLVED   Boolean?
  web_BET_RESOLVED     Boolean?
  
  email_MARKET_RESOLVED Boolean?
  web_MARKET_RESOLVED   Boolean?
  
  email_WIN_PAYOUT     Boolean?
  web_WIN_PAYOUT       Boolean?
  
  email_MARKET_CREATED Boolean?
  web_MARKET_CREATED   Boolean?
  
  email_MONTHLY_WINNER Boolean?
  web_MONTHLY_WINNER   Boolean?
  
  email_POINTS_RESET   Boolean?
  web_POINTS_RESET     Boolean?

  email_MARKET_DISPUTED Boolean?
  web_MARKET_DISPUTED   Boolean?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Market {
  id          String    @id @default(cuid())
  title       String
  description String
  type        MarketType
  status      MarketStatus @default(OPEN)
  
  creatorId   String
  creator     User      @relation("CreatedMarkets", fields: [creatorId], references: [id])
  
  arenaId     String?   // Optional during migration, made required later
  arena       Arena?    @relation(fields: [arenaId], references: [id], onDelete: Cascade)
  
  resolutionDate DateTime
  
  options     Option[]
  bets        Bet[]
  comments    Comment[]
  priceHistory PriceHistory[]
  transactions Transaction[] // Payouts linked to this market
  assets      MarketAsset[] // New relation
  disputes    Dispute[]
  llmUsage    LLMUsage[]
  
  approved    Boolean   @default(true)
  language    String    @default("en")

  // Visibility Relations
  hiddenUsers       User[]    @relation("HiddenMarketUsers")
  hideBetsFromUsers User[]    @relation("HiddenBetsUsers")
  
  minBet      Int?
  maxBet      Int?

  resolutionImage String? // Evidence URL
  winningOptionId String?
  winningValue    Float?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MarketAsset {
  id        String    @id @default(cuid())
  marketId  String
  market    Market    @relation(fields: [marketId], references: [id], onDelete: Cascade)
  type      AssetType
  url       String
  label     String?
  
  createdAt DateTime  @default(now())
}

model Option {
  id        String   @id @default(cuid())
  text      String
  marketId  String
  market    Market   @relation(fields: [marketId], references: [id], onDelete: Cascade)
  bets      Bet[]
  liquidity Float    @default(100) // AMM Pool Balance
  priceHistory PriceHistory[]
}

model PriceHistory {
  id        String   @id @default(cuid())
  marketId  String
  market    Market   @relation(fields: [marketId], references: [id], onDelete: Cascade)
  optionId  String
  option    Option   @relation(fields: [optionId], references: [id], onDelete: Cascade)
  price     Float
  createdAt DateTime @default(now())

  @@index([marketId])
  @@index([optionId])
}

model Bet {
  id        String   @id @default(cuid())
  amount    Int
  shares    Float    @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  marketId  String
  market    Market   @relation(fields: [marketId], references: [id], onDelete: Cascade)
  
  optionId  String?
  option    Option?  @relation(fields: [optionId], references: [id])
  
  numericValue Float?

  idempotencyKey String? @unique

  createdAt DateTime @default(now())
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Int
  type      TransactionType
  
  fromUserId String?
  fromUser   User?   @relation("Sender", fields: [fromUserId], references: [id])
  
  toUserId   String?
  toUser     User?   @relation("Receiver", fields: [toUserId], references: [id])

  marketId   String?
  market     Market? @relation(fields: [marketId], references: [id], onDelete: Cascade)

  arenaId    String?
  arena      Arena?  @relation(fields: [arenaId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  content   String
  read      Boolean  @default(false)
  
  arenaId   String?
  arena     Arena?    @relation(fields: [arenaId], references: [id], onDelete: Cascade)
  metadata  Json?

  createdAt DateTime @default(now())
}

model NotificationSettings {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Settings (Email, Web)
  email_BET_RESOLVED   Boolean @default(true)
  web_BET_RESOLVED     Boolean @default(true)
  
  email_MARKET_RESOLVED Boolean @default(true)
  web_MARKET_RESOLVED   Boolean @default(true)
  
  email_WIN_PAYOUT     Boolean @default(true)
  web_WIN_PAYOUT       Boolean @default(true)
  
  email_MARKET_CREATED Boolean @default(false)
  web_MARKET_CREATED   Boolean @default(true)
  
  email_MONTHLY_WINNER Boolean @default(true)
  web_MONTHLY_WINNER   Boolean @default(true)
  
  email_POINTS_RESET   Boolean @default(true)
  web_POINTS_RESET     Boolean @default(true)

  email_MARKET_DISPUTED Boolean @default(true)
  web_MARKET_DISPUTED   Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  marketId  String
  market    Market   @relation(fields: [marketId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
  GLOBAL_ADMIN
}

enum ArenaRole {
  MEMBER
  ADMIN
}

enum MarketType {
  BINARY
  MULTIPLE_CHOICE
  NUMERIC_RANGE
}

enum MarketStatus {
  OPEN
  PENDING_RESOLUTION
  RESOLVED
  CANCELLED
}

enum TransactionType {
  BET_PLACED
  WIN_PAYOUT
  USER_TRANSFER
  MONTHLY_RESET
}

enum NotificationType {
  MARKET_RESOLVED
  BET_RESOLVED
  WIN_PAYOUT
  MARKET_CREATED
  MONTHLY_WINNER
  POINTS_RESET
  MARKET_DISPUTED
}

model Dispute {
  id        String   @id @default(cuid())
  reason    String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  marketId  String
  market    Market   @relation(fields: [marketId], references: [id], onDelete: Cascade)
  status    DisputeStatus @default(OPEN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DisputeStatus {
  OPEN
  RESOLVED
  REJECTED
}

enum AssetType {
  IMAGE
  LINK
  FILE
}

model Invitation {
  id        String   @id @default(cuid())
  email     String?
  token     String   @unique
  
  arenaId   String
  arena     Arena    @relation(fields: [arenaId], references: [id], onDelete: Cascade)
  
  inviterId String
  inviter   User     @relation("SentInvitations", fields: [inviterId], references: [id], onDelete: Cascade)
  
  role      ArenaRole @default(MEMBER)
  status    InvitationStatus @default(PENDING)
  
  usageLimit Int?
  usageCount Int      @default(0)
  usages     InvitationUsage[]

  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, arenaId])
}

model InvitationUsage {
  id           String     @id @default(cuid())
  invitationId String
  invitation   Invitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)
  
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  usedAt       DateTime   @default(now())

  @@index([invitationId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  DECLINED
}

model LLMUsage {
  id        String   @id @default(cuid())
  arenaId   String?
  marketId  String?
  userId    String?
  type      LLMUsageType
  operation String
  tokens    Int?
  createdAt DateTime @default(now())
  
  arena     Arena?   @relation(fields: [arenaId], references: [id], onDelete: Cascade)
  market    Market?  @relation(fields: [marketId], references: [id], onDelete: SetNull)
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([arenaId])
  @@index([type])
}

enum LLMUsageType {
  CRON
  USER_TRIGGERED
}
